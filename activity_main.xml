<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_sixteen2"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/keyboard_edit_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_sixteen2"
        android:layout_marginTop="@dimen/margin_sixteen2"
        android:layout_marginEnd="@dimen/margin_sixteen2"
        android:layout_marginBottom="@dimen/margin_sixteen2"
        android:background="@drawable/edit_text_border"
        android:hint="@string/text_editor_hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/padding_eight" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/history_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <ListView
                android:id="@+id/history_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_one"/>

            <Button
                android:id="@+id/button_two"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_two" />

            <Button
                android:id="@+id/button_three"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_three" />

            <Button
                android:id="@+id/button_four"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_four" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_five"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_five" />

            <Button
                android:id="@+id/button_six"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_six" />

            <Button
                android:id="@+id/button_seven"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_seven" />

            <Button
                android:id="@+id/button_eight"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_eight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_nine"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_nine" />

            <Button
                android:id="@+id/button_A"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_A" />

            <Button
                android:id="@+id/button_B"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_B" />

            <Button
                android:id="@+id/button_C"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_C" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_D"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_D" />

            <Button
                android:id="@+id/button_E"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_E" />

            <Button
                android:id="@+id/button_F"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_F" />

            <Button
                android:id="@+id/button_0"
                style="@style/button_style"
                android:onClick="operationFunction"
                android:backgroundTint="#a6a6a6"
                android:text="@string/button_zero" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_back"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_eight"
                android:layout_marginLeft="@dimen/margin_eight"
                android:layout_marginBottom="@dimen/margin_eight"
                android:backgroundTint="#e60000"
                android:layout_weight="1"
                android:text="@string/button_back"
                android:textSize="@dimen/button_text_size"
                android:onClick="operationFunction"/>

            <Button
                android:id="@+id/button_OK"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_eight"
                android:layout_marginLeft="@dimen/margin_eight"
                android:layout_marginBottom="@dimen/margin_eight"
                android:backgroundTint="#267326"
                android:layout_weight="1"
                android:text="@string/button_OK"
                android:textSize="@dimen/button_text_size"
                android:onClick="operationFunction"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>